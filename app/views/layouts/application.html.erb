<!DOCTYPE html>
<html>
<head>
  <title>Brewski</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="top-nav"></div>
<div id="header-wrapper">
  <div class="container">
    <div class="header section" id="header">
      <h1 class="title">Brewski</h1>
      <% if current_user %>
          Welcome <%= current_user.name %>!
          <%= link_to "Sign Out", signout_path %>
      <% else %>
          <a href="/auth/twitter" title="Sign in with Twitter">
            <img src="/images/sign-in-with-twitter-l.png" alt=""/>
          </a>
      <% end %>
    </div>
  </div>
</div>

<%= yield %>

</body>
</html>
